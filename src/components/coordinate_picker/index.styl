@require '../../vars'

.z-coordinate-picker
  width: 100%
  height: 100%
  position: absolute
  z-index: 999
  display: flex
  flex-direction: column
  background: getColor('$tertiary100')

  > .map
    width: 100%
    flex1()
    display: flex
    position: relative

    > .toggle-satellite
      font-caption1()
      cursor: pointer
      position: absolute
      top: 8px
      left: 8px
      z-index: 100
      background: getColor('$tertiary0')
      padding: 0 4px
      border-radius: 2px
