@require '../../vars'

.z-coordinate-picker
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  background: getColor('$tertiary100')

  > .map
    width: 100%
    flex1()
    display: flex
    position: relative

    > .search
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%

    > .toggle-satellite
      font-caption1()
      cursor: pointer
      position: absolute
      bottom: 80px
      left: 8px
      z-index: 97
      background: getColor('$tertiary0')
      padding: 0 4px
      border-radius: 2px

    > .my-location-fab
      position: absolute
      bottom: 8px
      left: 8px
