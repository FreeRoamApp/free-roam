@require '../../vars'

.z-compose-review
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  display: flex
  flex-direction: column

  > .g-grid
    flex: 1
    display: flex
    flex-direction: column

    > .rating
      padding: 16px

    > .title
      width: 100%
      background: getColor('$bg')
      padding: 16px
      margin: 0
      appearance: none
      border: none
      outline: none

      &::placeholder
        font-body1()
        color: getColor('$bgText54')

    > .textarea
      flex: 1

    > .attachments
      display: flex
      padding: 16px

      > .attachment
        width: 64px
        height: 64px
        margin-left: 8px
        background-size: 100%
        background-position: center

      > .add-image
        background: getColor('$tertiary100')
        padding: 16px
        cursor: pointer
        position: relative

        > .upload-overlay
          position: absolute
          left: 0
          top: 0
          width: 100%
          height: 100%
          z-index: 1
          cursor: pointer


    > .divider
      width: 100%
      height: 1px
      background: getColor('$bgText12')
      margin: 0
