@require '../../vars'

.z-place-info
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch

  &.is-image-loaded
    > .cover
      opacity: 1
      transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1)

  > .cover
    width: 100%
    height: 200px
    background-size: cover // this might slow down browser a bit, could find alternative solution (might need to use js)
    background-position: center
    position: relative
    opacity: 0

    > .see-more
      font-body2()
      position: absolute
      bottom: 16px
      right: 16px
      padding: 8px 12px
      border-radius: 4px
      background: getColor('$black54')
      color: getColor('$white')

  > .warning
    font-subtitle2()
    background: getColor('$red500')
    color: getColor('$red500Text')
    padding: 8px

    > .g-grid
      display: flex
      align-items: center

      > .icon
        margin-right: 12px


  &.is-loading
    > .g-grid
      display: none

    > .spinner
      display: block

  > .spinner
    display: none

  > .g-grid
    padding: 16px
    box-sizing: border-box

    > .price
      font-subtitle2()

    > .rating
      display: flex

      > .rating-text
        font-body2()
        margin-left: 8px

        > .rating-count
          font-body2(true, medium)

    > .name
      font-h5()
      margin-bottom: 6px

    > .action-box
      margin-top: 24px

    > .is-overnight-allowed
      padding: 16px
      margin-bottom: 16px
      border-radius: 4px
      background: getColor('$yellow500')
      color: getColor('$yellow500Text')

      &.is-red
        background: getColor('$red500')
        color: getColor('$red500Text')

      &.is-green
        background: getColor('$green500')
        color: getColor('$green500Text')

    > .card
      margin-bottom: 24px

    > .amenity
      display: flex

      > .name
        margin-left: 8px


    > .buttons
      display: flex
      margin-bottom: 16px

      > .button
        flex1()

        &:first-child
          margin-right: 8px

    > .masonry
      margin: -4px -16px // account for padding in .section
      padding: 0 16px


    // TODO: move each section into own component, so we don't have to
    // do a broad selector like this (ie without >)
    .section
      font-body2(false, medium)
      padding: 24px 0 0 0
      border-top: 1px solid getColor('$black12')

      > .title
        font-subtitle2()

      > .h2
        font-h6()
        margin-bottom: 4px

      > .image
        width: 100%
        margin-top: 16px

      > .map
        width: 100%
        height: 0
        padding-bottom: 54.27%
        background-size: 100%
        border-radius: 2px

      > .features
        margin-top: 24px

        > .g-cols > .feature
          display: flex
          align-items: center

          > .icon
            margin-right: 8px

      > .seasons
        tapTabs()
        margin-bottom: 8px

      > .scale
        padding: 16px 0

        > .title
          font-subtitle1()
          margin-bottom: 8px

      > .title
        font-subtitle2()
        margin-bottom: 8px

      > .carriers
        white-space: nowrap
        overflow-x: auto

        > .carrier
          font-caption()
          display: inline-block
          text-align: center
          margin-right: 16px

          &:last-child
            margin-right: 0

          > .name
            font-caption(true, disabled)
            margin-top: 4px

  @media (min-width: $breakPointMedium)
    > .g-grid
      .section
        padding: 16px
