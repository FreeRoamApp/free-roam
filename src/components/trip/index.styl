@require '../../vars'

.z-trip
  flex1()
  display: flex
  flex-direction: column
  overflow: hidden
  position: relative

  > .map
    display: flex
    position: relative
    height: 218px

    > .places-along-route
      shadow-1()
      position: absolute
      bottom: 8px
      right: 48px
      background: getColor('$tertiary0')
      padding: 8px
      border-radius: 4px
      cursor: pointer

  > .info
    flex1()
    overflow: auto
    -webkit-overflow-scrolling: touch
    position: relative

    > .g-grid
      > .add
        margin-top: 16px
        margin-left: 72px
        display: flex
        align-items: center
        cursor: pointer

        > .text
          font-title()
          margin-left: 16px
          color: getColor('$secondary500')

      > .check-ins
        padding: 32px 16px 0 16px
        position: relative

        > .divider
          position: absolute
          top: 0
          left: 64px + 16px + 7px // time + padding + 1/2 circle
          height: 100%
          width: 2px
          background: getColor('$secondary500')

        > .placeholder
          padding-top: 16px

        > .check-in
          display: flex
          align-items: flex-start
          cursor: pointer
          min-height: 72px
          position: relative

          > .time-wrapper
            width: 64px
            flex-shrink: 0

            > .time
              height: 100%
              width: 100%
              position: absolute

              > .date
                font-caption-bold()
                color: getColor('$secondary500')

              > .travel-time
                font-caption3()
                top: 50%
                position: absolute
                height: 40px
                margin-top: -12px // height / 2 minus 8px for dot size

          > .dot
            flex-shrink: 0
            width: 16px
            height: 16px
            margin-top: 2px
            border-radius: 50%
            border: 2px solid getColor('$secondary500')
            outline: 3px solid getColor('$tertiary50')
            background: getColor('$tertiary50')
            position: relative
            z-index: 1

          > .info
            flex1()
            margin-left: 16px
            margin-bottom: 16px

            > .name
              font-title()

            > .location
              font-caption2()

            > .attachments
              margin-top: 8px

          > .actions
            margin-left: auto


      > .privacy
        padding: 16px

  @media (min-width: $breakPointMedium)
    > .info
      position: relative
