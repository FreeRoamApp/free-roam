@require '../../vars'

.z-trip
  flex1()
  display: flex
  flex-direction: column
  position: relative

  > .info
    background: getColor('$tertiary0')
    text-align: center

    > .content
      margin-top: -32px
      position: relative
      z-index: 99
      display: inline-block

      > .picture
        width: 90px
        height: 90px
        border-radius: 50%
        margin: 0 auto 16px auto
        background: getColor('$tertiary200')
        background-size: cover

      > .name
        font-h1()
        force-height-when-empty()
        margin-bottom: 2px

      > .stats
        font-body2()
        force-height-when-empty()

      > .follow
        margin-top: 12px


  > .fab
    position: fixed
    bottom: 16px
    right: 16px
    z-index: 50
