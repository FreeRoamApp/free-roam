@require '../../vars'

.z-info-level
  > .flavor-text
    font-body2(false, medium)
    margin-bottom: 32px

  > .bar
    position: relative
    margin: 8px 0
    height: 3px
    width: 100%
    border-radius: 4px
    background: getColor('$bgText12')

    > .fill
      position: absolute
      height: 100%
      border-radius: 4px
      background: getColor('$secondary700')
      transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1)

      // transition transform should be faster, but has weird quirks
