@require '../../vars'

.z-input-range

  &.has-value
    > .label
      > .info
        > .unset
          display: none

  > .label
    display: block
    margin-bottom: 16px

    > .range-container
      position: relative
      height: 28px

      > .range
        cursor: pointer
        appearance: none
        width: 100%
        height: 4px
        background: getColor('$primary500')
        -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
        outline: none

        &::-webkit-slider-thumb
          cursor: pointer
          appearance: none
          width: 16px
          height: 16px
          border-radius: 50%
          background: getColor('$primary500')

    > .info
      position: relative

      > .unset
        position: absolute
        display: block
        top: 0
        left: 0
        width: 100%
        height: 100%
        pointer-events: none
        text-align: center

      > .numbers
        display: flex
        margin-top: 8px

        > .number
          text-align: center
          margin: 0 auto

          &:first-child
            margin-left: 0

          &:last-child
            margin-right: 0
