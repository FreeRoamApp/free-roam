@require '../../vars'

.z-input-range

  > .label
    display: block
    margin-bottom: 16px

    > .range-container
      padding: 0 5px

      > .range
        appearance: none
        width: 100%
        height: 2px
        background: getColor('$primary500')
        -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
        outline: none

        &::-webkit-slider-thumb
          appearance: none
          width: 12px
          height: 12px
          border-radius: 50%
          background: getColor('$primary500')

    > .numbers
      display: flex
      margin-top: 8px

      > .number
        flex: 1
        text-align: center

    > .flavor-text
      display: flex
      font-caption1()

      > .min, > .max
        max-width: 40%

      > .max
        margin-left: auto
        text-align: right
