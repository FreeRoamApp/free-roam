@require '../../vars'

.z-group-app
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding: 16px

  > .open-in-app
    > .text
      font-caption1()
      margin-bottom: 8px
      text-align: center

  // > .open-in-browser

  > .or
    font-caption1()
    margin: 12px 0
    text-align: center

  > .dont-have
    margin-top: 40px

    > .text
      font-caption1()
      margin-bottom: 8px
      text-align: center

    > .badge
      display: block
      width: 135px
      height: 40px
      background-size: 100%
      margin: 0 auto
      cursor: pointer

      margin-bottom: 16px

      &.ios
        background-image: url('https://fdn.uno/d/images/app_store.svg')

      &.android
        background-image: url('https://fdn.uno/d/images/google_play.svg')
