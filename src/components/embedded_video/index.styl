@require '../../vars'

.z-embedded-video
  > iframe
    border: none

  > .thumbnail
    position: relative

    &:after
      position: absolute
      content: ' '
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: getColor('$black54')

    > .play
      width: 48px
      height: 48px
      border-radius: 50%
      background: getColor('$white')
      position: absolute
      left: 50%
      top: 50%
      margin-left: -24px
      margin-top: -24px
      z-index: 1
      display: flex

      &:after
        display: block
        content: ''
        width: 0
        height: 0
        border-left: 15px solid getColor('$primary500')
        border-bottom: 11px solid transparent
        border-top: 11px solid transparent
        margin: auto
