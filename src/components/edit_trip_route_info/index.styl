@require '../../vars'

.z-edit-trip-route-info
  position: absolute
  z-index: 9999
  bottom: 0
  left: 0
  width: 100%
  // height: 100%
  background: getColor('$tertiary0')
  height: 358px
  transform: translateY(316px)
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1)
  overflow-y: auto
  -webkit-overflow-scrolling: touch

  &.is-open
    // flex1()
    transform: translateY(0)

    > .header
      padding: 4px 16px
      background: getColor('$tertiary0')
      color: getColor('$bgText87')

      > .close-icon
        top: 4px

  > .header
    display: flex
    align-items: center
    justify-content: center
    padding: 8px 16px
    height: 42px
    box-sizing: border-box
    position: relative
    cursor: pointer
    background: getColor('$primaryMain')
    color: getColor('$primaryMainText')

    > .close-icon
      position: absolute
      top: 8px
      right: 16px

    > .icon
      margin-left: 8px

  > .stats
    display: flex
    padding: 0 16px
    justify-content: center

    > .main, > .alt
      &.main
        color: getColor('$secondary700')

        > .distance-time
          > .distance, > .time
            > .number
              color: getColor('$secondary700')

      &.alt
        color: getColor('$black54')
        margin-left: auto

        > .distance-time
          > .distance, > .time
            > .number
              color: getColor('$black54')

      > .distance-time
        display: flex

        > .distance, > .time
          display: flex
          align-items: flex-end

          > .number
            font-subtitle1()
            margin-right: 4px

        > .time
          margin-left: 24px

  > .actions
    padding: 8px 16px

  @media (min-width: $breakPointMedium)
    // position: absolute
    // z-index: 10
    bottom: 8px
    left: auto
    right: 8px
    background: getColor('$tertiary0')
    width: 400px
    height: 400px
