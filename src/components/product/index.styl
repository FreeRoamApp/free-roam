@require '../../vars'

.z-product
  padding: 16px
  flex: 1
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .g-grid

    > .image
      width: 100%
      height: 200px
      max-width: 100%
      background-size: auto 100%
      background-repeat: no-repeat
      background-position: center center

    > .actions
      margin: 20px 0

    > .name
      font-h2()
      margin-bottom: 8px

    > .description
      font-body1()

    > .title
      font-title()
      margin-top: 16px

