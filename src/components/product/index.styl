@require '../../vars'

.z-product
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding: 8px

  > .g-grid
    > .box
      shadow-1()
      background: getColor('$white')
      padding: 8px
      border-radius: 2px

      > .image
        width: 100%
        height: 200px
        max-width: 100%
        background-size: auto 100%
        background-repeat: no-repeat
        background-position: center center

      > .actions
        margin-top: 8px


    > .content
      padding: 16px 8px

      > .name
        font-h2()
        margin-bottom: 8px

      > .description
        font-body1()

      > .title
        font-title()
        margin-top: 16px

