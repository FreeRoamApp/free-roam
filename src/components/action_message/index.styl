@require '../../vars'

.z-action-message
  font-caption(no)
  color: getColor('$bgText54')
  display: flex
  align-items: center
  cursor: pointer

  > .name
    font-subtitle1(no)
    color: getColor('$bgText')

  > .message
    margin-left: 8px

  > .time
    margin-left: auto

    &.is-aligned-left
      margin-left: 4px

  @media (min-width: $breakPointMedium)
    > .time
      margin-left: 8px
