

@require '../../vars'

.z-nps_dialog
  font-body1()
  line-height: 1.6em !important
  margin: 0 0 8px 0

  > .label
    display: block
    margin-bottom: 16px

    > .range-container
      padding: 0 5px

      > .range
        appearance: none
        width: 100%
        height: 2px
        background: getColor('$primary500')
        -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
        outline: none

        &::-webkit-slider-thumb
          appearance: none
          width: 12px
          height: 12px
          border-radius: 50%
          background: getColor('$primary500')

    > .numbers
      display: flex
      margin-top: 8px

      > .number
        flex: 1
        text-align: center
