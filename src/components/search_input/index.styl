@require '../../vars'

$zIndexSearchOverlay = 2
$zIndexForm = 1

.z-search-input
  position: relative

  &.has-on-click
    > .form > .input
      cursor: pointer

  > .search-overlay
    position: absolute
    z-index: $zIndexSearchOverlay
    width: 100%
    top: 0
    left: 0
    height: 100%
    display: flex
    align-items: center
    box-sizing: border-box
    pointer-events: none

    > .right-icon, > .left-icon
      pointer-events: auto

    > .right-icon
      margin-left: auto
      margin-right: 4px

  > .form
    flex1()
    display: flex
    position: relative
    z-index: $zIndexForm

    > .input
      // shadow-1()
      flex1()
      font-subtitle1()
      appearance: none
      padding: 14px 14px 14px 48px
      border-radius: 8px
      border: 2px solid getColor('$tertiary300')
      box-sizing: border-box
      transition: margin 0.1s
      -webkit-tap-highlight-color: transparent
      color: getColor('$tertiary0Text')
      margin: 0
      outline: none

      &::placeholder
        font-subtitle1()
        opacity: 1
        color: getColor('$bgText54')

      &::-moz-placeholder
        line-height: 48px // should center in ff

  &.is-search-on-submit
      > .form
        > .input
          padding-left: 16px
