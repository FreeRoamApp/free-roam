@require '../../vars'

.z-edit-profile-general
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .g-grid
    padding: 0 16px 16px 16px
    box-sizing: border-box

    > .title
      font-subtitle1()
      margin-top: 24px

    > .section
      margin: 16px 0
      display: flex
      align-items: center
      max-width: 400px

      > .icon
        margin-right: 32px

      > .input
        flex1()

        > .warning
          font-subtitle1()
          color: getColor('$red500')
          cursor: pointer

    > .actions
      margin-top: 32px

      > .button
        display: inline-block
