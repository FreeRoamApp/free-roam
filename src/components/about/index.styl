@require '../../vars'

.z-about
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .mission, > .meet, > .help, > .transparency
    > .g-grid
      padding: 16px
      box-sizing: border-box

      > .title
        font-display1()
        text-align: center
        margin: 16px 0

  > .mission
    display: flex
    flex-direction: column
    align-items: center
    min-height: 370px
    background-image: url($cdnUrl + '/about/desert.jpg')
    background-size: 100% auto

    > .g-grid
      display: flex
      flex-direction: column
      align-items: center

      > .text
        font-title()
        max-width: 300px
        margin-bottom: 16px

      > .button
        width: 150px

  > .meet
    background: getColor('$tertiary0')
    padding-bottom: 32px

    > .g-grid

      > .g-grid > .g-cols > .g-col
        > .image
          width: 100%
          height: 0
          padding-bottom: (100 * 184 / 328)%
          background-size: 100%
          margin: 16px 0

          &.austin
            background-image: url($cdnUrl + '/about/austin.jpg')

          &.rachel
            background-image: url($cdnUrl + '/about/rachel.jpg')

        > .name
          font-h3()
          margin-bottom: 8px

  > .help
    background: getColor('$yellow50')
    text-align: center
    padding-bottom: 32px

    > .g-grid

      > .g-grid > .g-cols > .g-col
        > .image
          width: 140px
          height: 140px
          margin: 28px auto 0 auto
          background-size: 100%

          &.share
            background-image: url($cdnUrl + '/about/share.svg')

          &.review
            background-image: url($cdnUrl + '/about/review.svg')

          &.feedback
            background-image: url($cdnUrl + '/about/feedback.svg')

        > .title
          font-h3()
          margin-top: 16px
          margin-bottom: 8px

        > .description
          width: 235px
          margin: 0 auto

        > .button
          width: 148px
          margin: 12px auto 0 auto

  > .transparency
    background: getColor('$tertiary0')
    display: flex
    flex-direction: column
    align-items: center
    padding-bottom: 32px

    > .g-grid

      > .button
        width: 220px
        margin: 24px auto 0 auto

  a
    font-weight: 500

  > .disclaimer
    font-caption2()
    margin: 12px 0
    text-align: center


  @media (min-width: $breakPointMedium)
    > .mission
      background-position: center
