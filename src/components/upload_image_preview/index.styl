@require '../../vars'

$zIndexImagePreviewOverlay = 1
$zIndexImagePreviewFab = 2
$zIndexImagePreviewClose = 2

.z-upload-image-preview
  background: getColor('$grey900')
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  position: fixed
  top: 0
  left: 0
  z-index: 9999

  &:after
    content: ''
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    height: 96px
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), getColor('$black'))
    z-index: $zIndexImagePreviewOverlay

  > .image-wrapper
    display: flex
    align-items: center
    justify-content: center

    &.rotate-180
      > img
        transform: rotate(180deg)

    &.rotate-90
      > img
        transform: rotate(90deg)

    &.rotate-270
      > img
        transform: rotate(270deg)

    > img
      margin-top: 16px
      max-width: 100%
      height: auto
      // max-width: 600px

  > .fab
    position: absolute
    z-index: $zIndexImagePreviewFab
    bottom: 16px
    left: 50%
    margin-left: -28px

    > .progress
      color: getColor('$white')
      position: absolute
      top: 16px
      right: -40px
      width: 32px
      display: none

      &.is-visible
        display: block

  > .close
    position: absolute
    z-index: $zIndexImagePreviewClose
    left: 0
    bottom: 16px
