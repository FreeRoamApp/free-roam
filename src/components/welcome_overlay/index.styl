@require '../../vars'

.z-welcome-overlay
  background: getColor('$tertiary0')
  border-radius: 4px
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  display: flex
  z-index: 999

  > .skip
    position: absolute
    z-index: 999
    top: 8px
    right: 8px

  // > .block
  //   margin: 8px 0
  //
  //   a
  //     color: getColor('$primaryMain')
  //     font-weight: bold

.z-welcome-overlay_step
  flex1()
  display: flex
  flex-direction: column
  padding: 24px

  > .image
    display: block
    margin: auto auto 0 auto
    background-size: 100% auto

    &.welcome
      width: 180px
      height: 170px
      background-image: url($cdnUrl + '/illustrations/welcome_welcome.svg?11')
    &.trips
      width: 320px
      height: 150px
      background-image: url($cdnUrl + '/illustrations/empty_state_trips.svg')
    &.community
      width: 180px
      height: 179px
      background-image: url($cdnUrl + '/illustrations/welcome_community.svg')
    &.video
      width: 250px
      height: 200px
      background-image: url($cdnUrl + '/illustrations/welcome_video.svg')

  > .title
    font-h5()
    color: getColor('$primaryMain')
    text-align: center
    margin: 24px 0 8px 0

  > .content
    font-body2()
    text-align: center
    padding: 0 8px
    margin-bottom: auto

    > .action
      margin-top: 24px
