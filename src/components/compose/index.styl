@require '../../vars'

.z-compose
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  display: flex
  flex-direction: column

  > .g-grid
    flex: 1
    display: flex
    flex-direction: column

    > .title, > .textarea
      width: 100%
      background: getColor('$bg')
      padding: 16px
      margin: 0
      appearance: none
      border: none
      outline: none

      &::placeholder
        font-body1()
        color: getColor('$bgText54')

    > .textarea
      flex: 1

    > .divider
      width: 100%
      height: 1px
      background: getColor('$bgText12')
      margin: 0
