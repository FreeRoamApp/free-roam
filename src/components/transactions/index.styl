@require '../../vars'

.z-transactions
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .title
    font-subtitle1()
    padding: 16px

  > .subscription
    background: getColor('$tertiary0')
    padding: 16px

    > .g-grid

      > .amount
        font-subtitle1()

      > .payments
        font-caption()

      > .actions
        display: flex
        justify-content: flex-end

  > .transaction
    background: getColor('$tertiary0')
    padding: 16px
    border-bottom: 1px solid getColor('$tertiary200')

    > .g-grid
      display: flex

      > .icon
        width: 40px
        height: 40px
        margin-right: 16px
        background-size: 100%
        background-image: url($cdnUrl + '/about/donation_one_time.svg')

        &.monthly
          background-image: url($cdnUrl + '/about/donation_monthly.svg')

      > .content
        > .name
          font-subtitle1()

        > .info
          font-caption()

      > .amount
        font-subtitle1()
        margin-left: auto
