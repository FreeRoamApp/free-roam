@require '../../vars'

.z-groups
  flex1()
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  box-sizing: border-box

  > .unread-invites
    display: flex
    align-items: center
    padding: 16px

    > .icon
      margin-right: 32px

    > .chevron
      margin-left: auto

  > .title
    font-title()
    padding: 16px

  > .group-list, > .events
    background: getColor('$tertiary0')
    border-top: 1px solid getColor('$tertiary200')
    border-bottom: 1px solid getColor('$tertiary200')

    > .see-all
      padding: 16px
      display: block

      > .g-grid
        display: flex
        align-items: center

        > .text
          color: getColor('$bgText54')

        > .icon
          margin-left: auto

  > .group-list
    padding: 16px

  > .events
    > .event
      display: block
      padding: 16px 20px
      border-bottom: 1px solid getColor('$tertiary200')

      > .g-grid
        > .name
          font-title()

        > .info
          font-caption2()
