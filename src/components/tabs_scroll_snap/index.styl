@require '../../vars'

.z-tabs-new
  flex1()
  display: flex
  flex-direction: column
  // prevents iscroll screwups
  overflow-x: hidden
  overflow-y: auto
  -webkit-overflow-scrolling: touch
  -webkit-tap-highlight-color: transparent
  position: relative
  z-index: 1

  &.is-child-overflow-auto
    > .content
      > .top
        > .info
          display: none

  > .content
    flex1()
    display: flex
    flex-direction: column

    > .tabs-bar
      height: 48px

      @media (min-width: $breakPointMedium)
        height: 64px

    > .tabs-scroller
      flex1()
      display: flex
      overflow: hidden

      > .tabs
        display: flex
        touch-action: none
        scroll-snap-type: x mandatory
        overflow-x: auto
        // flex1()
        // Fixes weird graphics glitch where artifacts would remain if
        // dom changed, then tried to swipe
        // -webkit-backface-visibility: hidden

        > .iscroll-tab
          display: flex
          flex1()
          scroll-snap-align: start
          scroll-snap-stop: always
          min-width: 100%
          overflow-y: auto
          -webkit-overflow-scrolling: touch
          // -webkit-backface-visibility: hidden
