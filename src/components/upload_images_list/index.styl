@require '../../vars'

.z-upload-images-list
    padding: 16px
    white-space: nowrap
    overflow-x: auto
    -webkit-overflow-scrolling: touch

    > .attachment
      margin-left: 8px
      display: inline-block
      vertical-align: top

      > .image
        width: 60px
        height: 60px
        border-top-left-radius: 4px
        border-top-right-radius: 4px
        background-size: cover
        background-position: center

      > .progress
        font-tiny()
        color: getColor('$secondary500Text')
        display: block
        position: relative
        height: 20px
        text-align: center
        background: getColor('$secondary500')
        border-bottom-left-radius: 4px
        border-bottom-right-radius: 4px
        // opacity: 0.54

        &.is-uploading
          opacity: 0.7
          background: none
          color: getColor('$primary500Text')

        > .bar
          height: 100%
          background: getColor('$primary500')
          border-bottom-left-radius: 4px
          border-bottom-right-radius: 4px

        > .text
          position: absolute
          left: 0
          top: 0
          width: 100%

    > .add-image
      background: getColor('$primary500')
      border-radius: 4px
      padding: 12px 16px
      height: 80px
      box-sizing: border-box
      cursor: pointer
      position: relative
      display: inline-block
      vertical-align: top

      > .text
        text-align: center
        color: getColor('$primary500Text')
        margin-top: 4px

      > .upload-overlay
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        z-index: 1
        cursor: pointer
