@require '../../vars'

.z-upload-images-list
    padding: 16px
    white-space: nowrap
    overflow-x: auto
    -webkit-overflow-scrolling: touch

    > .attachment
      width: 64px
      height: 64px
      margin-left: 8px
      background-size: cover
      background-position: center
      display: inline-block
      vertical-align: top

      > .progress
        display: none

      &.is-uploading
        opacity: 0.7

        > .progress
          display: block
          height: 100%
          background: getColor('$primary500')
          opacity: 0.54

    > .add-image
      background: getColor('$tertiary100')
      padding: 16px
      cursor: pointer
      position: relative
      display: inline-block
      vertical-align: top

      > .upload-overlay
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        z-index: 1
        cursor: pointer
