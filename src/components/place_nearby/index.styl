@require '../../vars'

.z-place-nearby
  flex1()
  display: flex
  min-width: 0
  flex-direction: column

  > .map
    flex1()
    display: flex
    position: relative

    > .toggle-cell-towers
      font-caption1()
      cursor: pointer
      position: absolute
      top: 8px
      left: 8px
      z-index: 100
      background: getColor('$tertiary0')
      padding: 0 4px
      border-radius: 2px


  > .places-list
    flex1()
    display: flex
    padding: 8px

  > .fab
    position: fixed
    bottom: 16px
    right: 16px
    z-index: 50
