@require '../../vars'

.z-sheet
  position: fixed
  width: 100%
  height: 100%
  bottom: 0
  left: 0
  pointer-events: none
  display: flex
  flex-direction: column
  z-index: $zIndexSheet

  &.is-visible
    pointer-events: all

    > .overlay
      opacity: 1

    > .sheet
      transform: translateY(0)

  > .overlay
    position: fixed
    width: 100%
    height: 100%
    background: getColor('$bgText38')
    -webkit-tap-highlight-color: getColor('$transparent')
    opacity: 0
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1)

  > .sheet
    position: absolute
    background: getColor('$tertiary0')
    bottom: 0
    left: 0
    border-top-left-radius: 12px
    border-top-right-radius: 12px
    width: 100%
    padding: 24px 24px 16px 24px
    box-sizing: border-box
    z-index: 1
    transform: translateY(100%)
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1)

    > .inner
      max-width: 500px
      margin: auto

      > .content
        display: flex
        align-items: center

        > .message
          margin-left: 40px

      > .actions
        display: flex
        justify-content: flex-end
        margin-top: 12px
