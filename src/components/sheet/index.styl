

@require '../../vars'

.z-sheet
  position: fixed
  width: 100%
  height: 100%
  bottom: 0
  left: 0
  display: flex
  flex-direction: column
  z-index: $zIndexSheet

  > .overlay
    position: fixed
    width: 100%
    height: 100%
    background: getColor('$black54')
    width: 100%
    height: 100%
    -webkit-tap-highlight-color: getColor('$transparent')

  > .sheet
    position: absolute
    background: getColor('$tertiary700')
    bottom: 0
    left: 0
    width: 100%
    padding: 24px 24px 8px 24px
    box-sizing: border-box
    z-index: 1

    > .inner
      max-width: 500px
      margin: auto

      > .content
        display: flex
        align-items: center

        > .message
          margin-left: 40px

      > .actions
        display: flex
        justify-content: flex-end
        margin-top: 12px
