@require '../../vars'

$zIndexOverlay = 1002
$zIndexForm = 1001
$zIndexResults = 1000

.z-find-friends
  display: flex
  flex-direction: column
  justify-content: center
  box-sizing: border-box
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0

  > .overlay
    position: absolute
    z-index: $zIndexOverlay
    width: 100%
    top: 0
    left: 0
    display: flex
    box-sizing: border-box
    pointer-events: none

    > .right-icon, > .left-icon
      pointer-events: auto

    > .right-icon
      margin-left: auto


  > .form
    height: 48px
    display: flex
    position: relative
    z-index: $zIndexForm

    > .input
      shadow-1()
      flex: 1
      margin: 8px
      padding-left: 64px
      border-radius: 2px
      border: none
      color: getColor('$black')
      box-sizing: border-box
      transition: margin 0.1s
      -webkit-tap-highlight-color: transparent

      &:focus
        outline: none

  > .form
    > .input
      margin: 0
      box-shadow: none

  > .results
    background: getColor('$grey200')
    z-index: $zIndexResults // FIXME: global z-index
    display: flex
    flex: 1
    padding-top: 10px
    box-sizing: border-box
    overflow: auto
    -webkit-overflow-scrolling: touch
