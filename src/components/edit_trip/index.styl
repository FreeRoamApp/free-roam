@require '../../vars'

.z-edit-trip
  flex1()
  display: flex
  flex-direction: column
  overflow: hidden
  position: relative

  > .map
    flex1()
    display: flex
    position: relative

    > .places-along-route
      shadow-1()
      position: absolute
      bottom: 32px
      right: 16px
      background: getColor('$tertiary100')
      padding: 8px
      border-radius: 4px
      cursor: pointer

  > .info
    flex1()
    overflow: auto
    -webkit-overflow-scrolling: touch

    > .g-grid

      > .check-ins
        padding: 0 16px 16px 16px

        > .placeholder
          padding-top: 16px

        > .check-in
          > .info
            display: flex
            align-items: center
            height: 44px

            > .name
              font-title()

            > .actions
              margin-left: auto

  @media (min-width: $breakPointMedium)
    > .info
      position: relative
