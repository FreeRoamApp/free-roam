@require '../../vars'

.z-users-nearby
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding: 16px 0

  > .g-grid

    > .title
      font-subtitle1()
      padding: 0 16px
      display: flex
      align-items: center
      margin-bottom: 8px

      > .toggle
        margin-left: auto
        position: relative

        > .helper-arrow
          position: absolute
          top: 28px
          left: -56px
          width: 80px
          height: 88px
          background: url($cdnUrl + '/illustrations/arrow.svg')
          background-size: 100%

    > .empty
      text-align: center
      max-width: 270px
      margin: 24px auto 0 auto

      > .image
        width: 170px
        height: 171px
        margin: 0 auto
        background: url($cdnUrl + '/illustrations/empty_state_location_off.svg')
        background-size: 100%

      > .title
        font-h5(true, medium)
        margin-top: 24px
        margin-bottom: 4px

      > .description
        font-body2(true, medium)

    > .users
      margin-top: 8px

      > .empty
        text-align: center
        max-width: 320px
        margin: 24px auto 0 auto

        > .image
          width: 170px
          height: 152px
          margin: 0 auto
          background: url($cdnUrl + '/illustrations/no_one_nearby.svg')
          background-size: 100%

        > .title
          font-h5(true, medium)
          margin-top: 24px
          margin-bottom: 4px

        > .description
          font-body2(true, medium)

      > .user
        display: flex
        align-items: center
        padding: 16px
        cursor: pointer

        > .info
          margin-left: 16px

          > .name
            font-subtitle1()

          > .location
            font-caption(true, disabled)

        > .distance
          color: getColor('$primaryMain')
          margin-left: auto
