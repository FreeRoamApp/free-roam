@require '../../vars'

.z-place-info-action-box
  margin-bottom: 20px

  > .actions
    display: flex

    > .action
      flex1()
      text-align: center
      cursor: pointer
      display: flex
      flex-direction: column
      align-items: center

      > .icon
        margin-bottom: 2px
        border: 2px solid getColor('$secondary700')
        border-radius: 50%
        padding: 12px

        &.is-filled
          background: getColor('$secondary700')

      > .text
        font-caption()
        color: getColor('$secondary700')
        margin-top: 8px
