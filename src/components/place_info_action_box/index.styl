@require '../../vars'

.z-place-info-action-box
  padding: 8px
  border: 1px solid getColor('$bgText12')
  border-radius: 4px
  margin-bottom: 16px

  > .actions
    display: flex
    height: 46px

    > .divider
      width: 1px
      height: 100%
      background: getColor('$bgText26')

    > .action
      flex1()
      text-align: center
      cursor: pointer
      display: flex
      flex-direction: column
      align-items: center

      > .icon
        margin-bottom: 2px

      > .text
        font-title()
