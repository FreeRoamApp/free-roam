@require '../../vars'

.z-author
  font-caption1(no)
  color: getColor('$bgText54')
  display: flex
  align-items: center
  cursor: pointer

  > .icon
    margin-right: 8px

  > .name
    font-title(no)
    color: getColor('$bgText')

  > .icons
    display: flex
    align-items: center

    > .icon
      margin-left: 4px

      > .badge
        display: block

  > .time
    margin-left: auto

    &.is-aligned-left
      margin-left: 8px

  > .middot
    margin-left: 4px
    margin-right: 4px

  > .trophies
    display: flex
    align-items: center

    > .icon
      margin-left: 4px

  @media (min-width: $breakPointMedium)
    > .time
      margin-left: 8px
