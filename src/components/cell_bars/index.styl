@require '../../vars'

.z-cell-bars
  display: flex
  align-items: flex-end
  position: relative

  &.is-interactive
    cursor: pointer

  > .bar
    width: 12%
    margin: 0 4%
    background: getColor('$tertiary200')
    border-radius: 15px

    &.is-visible
      background: getColor('$secondary500')

  > .no-signal
    position: absolute
    left: 0
    top: 0
