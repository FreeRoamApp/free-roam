@require '../../vars'

.z-group-user-settings-dialog_dialog
  > .title, > .links > .title
    font-subtitle1()
    color: getColor('$primaryMain')
    margin-bottom: 8px

  > .links
    margin-bottom: 16px

  > .list, > .links > .list
    margin: 0
    padding: 0
    list-style-type: none

    > .item
      display: flex
      align-items: center
      padding: 16px 0
      cursor: pointer

      &.link
        padding: 8px 0

      > .icon
        margin-right: 30px

      > .text
        font-body1()
        color: getColor('$bgText')

      > .toggle
        margin-left: auto
