@require '../../vars'

.z-new-review-compose
  flex1()
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  display: flex
  flex-direction: column

  > .g-grid
    flex1()
    display: flex
    flex-direction: column
    // get scroll working if content is too tall
    min-height: min-content

    > .rating
      padding: 16px

    > .title
      width: 100%
      background: getColor('$bg')
      padding: 16px
      margin: 0
      appearance: none
      border: none
      outline: none

      &::placeholder
        font-body1()
        color: getColor('$bgText54')
        opacity: 1

    > .textarea
      flex1()
      min-height: 150px

    > .attachments
      padding: 16px
      white-space: nowrap
      overflow-x: auto
      -webkit-overflow-scrolling: touch

      > .attachment
        width: 64px
        height: 64px
        margin-left: 8px
        background-size: cover
        background-position: center
        display: inline-block
        vertical-align: top

        > .progress
          display: none

        &.is-uploading
          opacity: 0.7

          > .progress
            display: block
            height: 100%
            background: getColor('$primary500')
            opacity: 0.54

    > .divider
      width: 100%
      height: 1px
      background: getColor('$bgText12')
      margin: 0
