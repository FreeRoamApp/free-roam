  // 66%
  //   transform: scale(0.8)
  //   opacity: 0.5
  // 100%
  //   transform: scale(0.8)
  //   opacity: 0.5

@keyframes z-spinner_smoke
  0%
    transform: scale(0.5)
    opacity: 1
  // 50%
  //   transform: scale(1.5)
  100%
    transform: scale(1.5)
    opacity: 0

.z-spinner
  flex1()
  display: flex
  flex-direction: column
  margin-top: 16px
  overflow: hidden

  > .van
    animation: z-spinner_van 1.2s infinite linear
    margin: auto auto 0 auto
    position: relative
    padding-left: 10px

    > .chassis
      width: 93px
      height: 51px
      background-image:url('data:image/svg+xml;base64,')


    > .wheel-1, > .wheel-2
      position: absolute
      bottom: 0
      animation: z-spinner_wheels 1.2s infinite linear
      width: 19px
      height: 19px
      will-change: transform
      background-image:url('data:image/svg+xml;base64,')

    > .wheel-1
      left: 26px

    > .wheel-2
      left: 70px

    > .smoke
      position: absolute
      transform-origin: 100% 70%
      left: 0px
      bottom: 10px
      animation: z-spinner_smoke 1.2s infinite
      width: 17px
      height: 14px
      background-image:url('data:image/svg+xml;base64,')


  > .text
    font-micro()
    margin: 4px auto auto auto
    text-align: center
