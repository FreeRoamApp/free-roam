@require '../../vars'

@keyframes z-spinner_van
  0%
    transform: translateY(0)
  50%
    transform: translateY(5%)
  100%
    transform: translateY(0)

@keyframes z-spinner_wheels
  0%
    transform: rotate(0)
  100%
    transform: rotate(360deg)
  // 0%
  //   transform: scale(0.8)
  //   opacity: 0.5
  // 33%
  //   transform: scale(1)
  //   opacity: 1
  // 66%
  //   transform: scale(0.8)
  //   opacity: 0.5
  // 100%
  //   transform: scale(0.8)
  //   opacity: 0.5

@keyframes z-spinner_zoom
  0%
    transform: scaleX(0)
    opacity: 1
  50%
    // transform: scaleX(0.75)
    opacity: 1
  100%
    transform: scaleX(1.5)
    opacity: 0

.z-spinner
  flex1()
  display: flex
  flex-direction: column
  margin-top: 16px
  overflow: hidden

  > .van
    animation: z-spinner_van 1.2s infinite linear
    margin: auto auto 0 auto
    position: relative
    padding-left: 10px

    > .chassis
      width: 113px
      height: 33px
      background-image:url('data:image/svg+xml;base64,')


    > .wheel-1, > .wheel-2, > .wheel-3
      position: absolute
      bottom: -6px
      animation: z-spinner_wheels 1.2s infinite linear
      width: 14px
      height: 13px
      will-change: transform
      background-image:url('data:image/svg+xml;base64,')

    > .wheel-1
      left: 22px

    > .wheel-2
      left: 70px

    > .wheel-3
      left: 98px

    > .line-1, > .line-2, > .line-3
      position: absolute
      transform-origin: 100% 100%
      animation: z-spinner_zoom 1.8s infinite
      width: 17px
      height: 2px
      background-color: getColor('$primary200')

    > .line-1
      width: 30px
      left: -24px
      bottom: 12px
      animation-delay: 0

    // > .line-2
    //   display: none
    //   width: 22px
    //   left: -30px
    //   bottom: 12px
    //   animation-delay: 1s

    > .line-3
      width: 14px
      left: -12px
      bottom: 4px
      animation-delay: 0.5s


  > .text
    font-micro()
    margin: 12px auto auto auto
    text-align: center
