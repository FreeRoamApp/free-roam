@require '../../vars'

@keyframes z-spinner_van
  0%
    transform: translateY(0)
  50%
    transform: translateY(5%)
  100%
    transform: translateY(0)

@keyframes z-spinner_wheels
  0%
    transform: rotate(0)
  100%
    transform: rotate(360deg)
