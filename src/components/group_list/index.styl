@require '../../vars'

.z-group-list
  > .title
    font-subtitle1()
    color: getColor('$primaryMain')

  > .no-groups
    box-sizing: border-box
    padding: 16px
    text-align: center

  > .groups
    overflow: auto
    -webkit-overflow-scrolling: touch
    white-space: nowrap
    padding-bottom: 4px

    > .group
      shadow-1()
      background: getColor('$tertiary0')
      border-radius: 2px
      display: inline-block
      width: 200px
      margin-right: 8px

      &:last-child
        margin-right: 0

      > .image
        imageFadeIn()
        width: 100%
        height: 150px
        border-radius: 2px
        padding: 8px
        box-sizing: border-box
        background-size: 100% auto
        position: relative

        &:after
          content: ''
          position: absolute
          left: 0
          bottom: 0
          width: 100%
          height: 100px
          background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 33%, getColor('$black12') 66%, getColor('$black54'))
          z-index: 1

        > .name
          font-subtitle1(false)
          position: absolute
          z-index: 2
          bottom: 6px
          left: 6px
          white-space: normal
          line-height: 1em
          // overflow: hidden
          // text-overflow: ellipsis
          // white-space: nowrap
          width: 100%
          color: getColor('$white')

      > .actions
        display: flex

        > .chat
          margin-left: auto
