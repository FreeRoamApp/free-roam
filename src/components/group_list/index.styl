@require '../../vars'

.z-group-list
  > .g-grid
    > .title
      font-title()
      color: getColor('$primary500')

  > .no-groups
    > .g-grid
      box-sizing: border-box
      padding: 16px
      text-align: center

  > .groups
    > .g-grid
      > .g-cols
        > .g-col
          > .group
            shadow-1()
            background: getColor('$tertiary0')
            border-radius: 2px
            display: flex
            align-items: center
            height: 80px

            > .image
              width: 137px
              height: 80px
              background-size: 100%
              background-color: getColor('$secondary500')
              border-top-left-radius: 4px
              border-bottom-left-radius: 4px

            > .content
              padding: 8px 24px
              white-space: nowrap
              overflow: hidden
              flex: 1

              > .name
                font-title()
                overflow: hidden
                text-overflow: ellipsis

              > .count
                font-caption2()
                margin-top: 2px
