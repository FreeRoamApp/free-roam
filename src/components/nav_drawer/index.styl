@require '../../vars'

$zIndexDrawer = 300

.z-nav-drawer
  position: relative
  z-index: 999

.z-nav-drawer_drawer
  flex1()
  display: flex
  flex-direction: column
  border-right: 1px solid getColor('$bgText12')

  > .header
    shadow-1()
    // prevents flicker glitch http://stackoverflow.com/a/3921870
    backface-visibility: hidden
    padding: 20px 16px
    height: 56px
    box-sizing: border-box
    background: getColor('$header500')
    display: flex
    align-items: center

    @media (min-width: $breakPointMedium)
      height: 64px

    > .icon
      width: 36px
      margin-right: 16px

    > .name
      font-h1(false)
      color: getColor('$header500Text')

  > .ad
    // position: absolute
    // bottom: 0
    width: 336px
    height: 280px

  > .content
    flex1()
    width: 100%
    box-sizing: border-box
    background: getColor('$tertiary0')
    padding: 8px 0
    overflow-y: auto
    -webkit-overflow-scrolling: touch

    > .menu
      width: 100%
      list-style-type: none
      margin: 0
      padding: 0

      > .sign-in-buttons
        padding: 6px 16px
        display: flex

        > .button
          font-button()
          flex1()
          padding: 10px
          background: getColor('$primary500')
          color: getColor('$primary500Text')
          text-align: center
          border-radius: 2px
          cursor: pointer

          &:first-child
            margin-right: 16px

      > .divider
        width: 100%
        height: 1px
        background: getColor('$bgText12')
        margin: 8px 0

      > .subhead
        font-subhead()
        color: getColor('$primary500')
        padding: 16px

      .menu-item
        > .menu-item-link
          font-body1()
          cursor: pointer
          display: flex
          align-items: center
          padding: 8px 16px

          // &:active
          //   background: getColor('$tertiary200')

          &.is-child
            color: getColor('$tertiary200Text70')

          > .icon
            margin-right: 36px
            width: 24px
            height: 28px

          > .notification
            &.is-visible
              display: block

            width: 6px
            height: 6px
            display: none
            border-radius: 50%
            background: getColor('$primary500')
            margin-left: 8px

          > .chevron
            margin-left: auto

        ul
          list-style-type: none
          margin: 0
          padding: 0

          &.children-0
            padding-left: 16px

        &.is-selected
          > .menu-item-link
            font-title()
            background: getColor('$tertiary100')

