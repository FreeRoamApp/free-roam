@require '../../vars'

.z-guides
  padding: 16px
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .g-grid
    > .g-cols
      > .g-col
        > .guide
          shadow-1()
          border-radius: 2px
          display: block
          width: 100%
          height: 150px
          margin-bottom: 8px
          position: relative
          background: getColor('$white')

          > .background
            position: absolute
            left: 0
            top: 0
            width: 100%
            height: 100%
            background-size: auto 100%
            background-repeat: no-repeat
            background-position: center center

            > .gradient
              position: absolute
              top: 0
              left: 0
              width: 100%
              height: 100%
              background: getColor('$black70')
              border-radius: 2px

          > .overlay
            position: absolute
            left: 0
            top: 0
            width: 100%
            height: 100%
            border-radius: 2px
            padding: 16px
            box-sizing: border-box
            background-color: getColor('$blue50026')
            display: flex
            justify-content: center
            align-items: center
            flex-direction: column

            > .name
              font-h1()
              color: getColor('$white')

            > .description
              font-body1()
              text-align: center
              color: getColor('$white70')
              margin-top: 8px

  @media (min-width: $breakPointMedium)
    > .g-grid > .g-cols > .g-col > .guide
      margin-bottom: 0
