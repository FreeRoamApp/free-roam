@require '../../vars'

.z-trip-list-item
  card()
  display: block
  border-radius: 4px
  height: 112px

  > .g-grid
    display: flex

    > .image
      width: 112px
      height: 112px
      border-radius: 4px
      background-size: cover
      flex-shrink: 0

    > .content
      padding: 0 16px
      margin: auto 0

      > .name
        font-h3(false)
        margin-bottom: 2px

      > .info
        font-body2(false)

      > .stats
        font-caption(false)
        color: getColor('$primary500')
        margin-top: 8px

    > .selected
      margin: auto 20px auto auto
      border: 2px solid getColor('$secondary500')
      border-radius: 50%
      width: 50px
      height: 50px
