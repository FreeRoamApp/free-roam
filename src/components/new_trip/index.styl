@require '../../vars'

.z-new-trip
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .g-grid

    > .title
      font-subtitle1()
      margin-top: 32px
      padding: 0 16px

    > .photos
      padding: 0 24px
      margin-top: 24px
      margin-left: 0
      box-sizing: border-box
      max-width: 640px

      > .g-cols
        > .g-col
          margin-bottom: 24px

          &:nth-child(3n + 2)
            > .photo
              margin: 0 auto

          &:nth-child(3n + 3)
            > .photo
              margin-left: auto

          > .photo
            width: 90px
            height: 90px
            border-radius: 50%
            background-size: 90px
            background-position: center
            background-color: getColor('$tertiary0')
            display: flex
            position: relative

            &.is-selected
              border: 4px solid getColor('$secondaryMain')

            &.upload
              position: relative
              background-size: cover

              &.rotate-180
                transform: rotate(180deg)

              &.rotate-90
                transform: rotate(90deg)

              &.rotate-270
                transform: rotate(270deg)

            > .edit
              width: 28px
              height: 28px
              border-radius: 50%
              border: 2px solid getColor('$secondaryMain')
              position: absolute
              bottom: 0
              right: 0
              background: getColor('$tertiary50')


            > .upload-overlay, > .edit > .upload-overlay
              position: absolute
              top: 0
              left: 0
              width: 100%
              height: 100%
              z-index: $zIndexUploadOverlay

    > .field
      padding: 16px
      display: block

      > .name
        font-body1()
        margin-bottom: 4px

    > .actions
      max-width: 260px
      margin: 0 auto
      padding: 16px
      margin-top: 24px
