@require '../../vars'

.z-profile
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch

  &.is-image-loaded
    > .header > .cover
      opacity: 1
      transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1)

  > .header
    width: 100%
    height: 180px
    padding: 8px 16px
    box-sizing: border-box
    position: relative

    > .cover
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background-color: #94c1e2 // ocean blue color from map
      background-size: auto 100%
      background-repeat: no-repeat
      background-position: center
      opacity: 0
      z-index: 0

    > .menu
      display: inline-block

    > .buttons
      position: absolute
      top: 8px
      right: 8px
      display: flex

    > .avatar
      position: absolute
      left: 50%
      margin-left: -44px // 1/2 of width + border
      bottom: -44px
      border-radius: 50%
      border: 4px solid getColor('$tertiary0')

  > .section
    background: getColor('$tertiary0')
    margin-bottom: 16px

    > .g-grid

      > .title
        font-title()
        padding: 16px

        > .count
          font-body2()
          margin-left: 8px

      > .divider
        width: 100%
        height: 1px
        background: getColor('$bgText12')
        margin: 12px 0

      > .see-all
        display: flex
        align-items: center
        padding: 16px

        > .text
          color: getColor('$bgText54')

        > .icon
          margin-left: auto


  > .info
    // padding-bottom: 16px

    &.is-loading
      min-height: 200px
      padding-top: 100px

    > .g-grid
      > .karma
        font-caption3()
        padding: 16px
        display: flex
        align-items: center

        > .icon
          margin-right: 8px

      > .name, > .bio
        text-align: center

        &.name
          font-h3()
          margin-bottom: 8px
          display: flex
          align-items: center
          justify-content: center

          > .icon
            margin-left: 4px

        &.bio
          font-body2()
          padding: 0 16px

      > .bits
        padding: 0 16px

        > .bit
          display: flex
          align-items: center
          margin-bottom: 12px

          &:last-child
            margin-bottom: 16px

          > .icon
            margin-right:12px

          > .text
            color: getColor('$bgText54')

      > .links
        display: flex
        margin-top: 16px
        justify-content: center
        height: 32px

        > .link
          margin: 0 16px

        > .divider
          width: 1px
          height: 100%
          background: getColor('$bgText12')
          margin: 0 8px
