@require '../../vars'

.z-trips-mine
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding: 24px 16px

  > .trip-onboard
    display: flex
    flex-direction: column
    align-items: center

    > .placeholder
      text-align: center

      > .icon
        width: 145px
        height: 124px
        background-size: 100%
        margin: 48px auto 24px auto


    > .title
      font-display1()
      text-align: center
      margin-bottom: 8px

    > .features
      ul()
      font-h3m()

    > .actions
      display: flex
      margin-top: 24px

      > .action
        margin: 0 8px

  > .info-card
    margin-bottom: 24px

  > .create-button
    margin-bottom: 24px
