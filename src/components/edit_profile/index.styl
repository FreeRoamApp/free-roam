@require '../../vars'

$zIndexUploadOverlay = 1

.z-edit-profile
  > .g-grid
    padding: 16px
    box-sizing: border-box

    > .section
      > .title
        font-title()
        text-transform: uppercase
        color: getColor('$primary500')

      > .input
        margin: 16px 0

      > .flex
        display: flex
        align-items: center

        > .button
          height: 44px
          margin-left: 16px
          position: relative

          > .upload-overlay
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            z-index: $zIndexUploadOverlay

    > .actions
      margin-top: 32px

      > .button
        display: inline-block
