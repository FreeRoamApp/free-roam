@require '../../vars'

.z-info-level-tabs
  > .tabs
    display: flex
    background: getColor('$tertiary0')
    border: 1px solid getColor('$tertiary200')
    border-radius: 4px

    > .tab
      cursor: pointer
      flex1()
      text-align: center
      padding: 4px 0

      &.is-selected
        background: getColor('$tertiary200')
        font-title()
