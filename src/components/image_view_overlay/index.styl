@require '../../vars'

.z-image-view-overlay
  background: getColor('$grey900')
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  position: absolute
  z-index: 999

  animation: z-overlay-fade-in 0.6s

  &:after
    content: ''
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    height: 96px
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), getColor('$black'))
    z-index: $zIndexImagePreviewOverlay

  > .previous, > .next
    position: absolute
    top: 50%
    z-index: 99

  > .previous
    left: 0

  > .next
    right: 0

  > .slider
    flex1()
    display: flex
    flex-direction: column

.z-image-view-overlay_image
  display: block
  margin: auto
  user-drag: none
  -webkit-user-drag: none
  -moz-user-drag: none
  -ms-user-drag: none
