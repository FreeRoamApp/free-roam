@require '../../vars'

.z-checkbox
  position: relative

  > .checkbox
    width: 16px
    height: 16px
    vertical-align: bottom
    cursor: pointer
    // No IE support!
    appearance: none
    outline: 0
    box-sizing: border-box
    background: getColor('$tertiary100')
    border: 1px solid getColor('$primary500')
    border-radius: 2px

    &:checked
      background: getColor('$primary500')
      border: 1px solid getColor('$primary900')
      color: getColor('$primary500Text')
      outline: 0

      &~.icon
        display: block

  > .icon
    display: none
    position: absolute
    left: 50%
    top: 50%
    margin-left: -7px
    margin-top: -5px
    pointer-events: none
