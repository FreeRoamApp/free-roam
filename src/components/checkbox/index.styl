@require '../../vars'

.z-checkbox
  width: 20px
  height: 20px
  vertical-align: bottom
  cursor: pointer
  // No IE support!
  appearance: none
  position: relative
  outline: 0
  box-sizing: border-box
  background: getColor('$tertiary100')
  border: 1px solid getColor('$primary500')
  border-radius: 2px

  &:checked
    background: getColor('$primary500')
    border: 1px solid getColor('$primary900')
    color: getColor('$primary500Text')
    outline: 0

    &:after
      // icon font
      font-family: verdana
      content: '\2713'
      position: absolute
      top: -2px
      left: -3px
      text-align: center
      width: 25px
      font-size: 18px
