@require '../../vars'

.z-notifications
  flex1()
  overflow-y: auto
  -webkit-overflow-scrolling: touch
  width: 100%

  > .g-grid
    > .notification
      display: flex
      padding-top: 16px

      &.is-unread
        background: getColor('$tertiary0')

      > .icon
        margin-right: 16px
        padding-left: 16px

      > .right
        flex1()
        padding: 0 16px 20px 16px
        border-bottom: 1px solid getColor('$black12')

        > .title
          font-body1()
          margin-bottom: 4px

        > .time
          font-caption(true, disabled)


  > .no-notifications
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    padding-top: 48px
    text-align: center

    > .message
      font-body1()
      margin-top: 16px
      color: getColor('$bg500Text')
