@require '../../vars'

.z-attachments
  > .g-grid
    > .g-cols
      > .g-col
        > .attachment
          cursor: pointer
          position: relative

          > .more
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            background: getColor('$black54')
            display: flex
            align-items: center
            justify-content: center

            > .text
              font-subtitle1()
              color: getColor('$white')

          > .image
            background-size: cover
            padding-bottom: 100%
