@require '../../vars'

.z-layer-settings-overlay
  background: getColor('$tertiary100')
  width: 100%
  height: 100%
  position: absolute
  z-index: 9999
  display: flex
  flex-direction: column

  > .content
    flex1()
    overflow: auto
    -webkit-overflow-scrolling: touch

    > .title
      font-title()
      padding: 16px

    > .layers
      background: getColor('$tertiary0')

      > .layer
        padding: 16px
        display: flex

        > .icon
          width: 48px
          height: 48px
          background-size: 100%
          border-radius: 8px
          border: 2px solid getColor('$black26')

        > .info
          flex1()
          margin-left: 24px

          > .slider
            display: flex
            // align-items: center

            > .range
              flex1()

            > .percent
              font-caption-bold(false)
              margin-top: 4px
              margin-left: 24px
