@require '../../vars'

.z-categories
  padding: 16px
  flex: 1
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .g-grid
    > .g-cols
      > .g-col
        > .category
          shadow-1()
          display: block
          width: 100%
          height: 200px
          margin: 0 auto
          max-width: 100%
          background-size: 100%
          background-repeat: no-repeat
          background-position: center center
          position: relative

          > .overlay
            position: absolute
            left: 0
            top: 0
            width: 100%
            height: 100%
            background-color: getColor('$black54')
            display: flex
            justify-content: center
            align-items: center
            flex-direction: column

            > .name
              font-h1()
              color: getColor('$white')

            > .description
              font-body1()
              color: getColor('$white70')
              margin-top: 8px
