@require '../../vars'

.z-categories
  padding: 16px
  flex: 1
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .g-grid
    > .search
      margin-bottom: 16px
    > .g-cols
      > .g-col
        > .category
          shadow-1()
          display: block
          width: 100%
          height: 150px
          margin: 0 auto
          position: relative

          > .background
            position: absolute
            left: 0
            top: 0
            width: 100%
            height: 100%
            background-size: auto 100%
            background-repeat: no-repeat
            background-position: center center

            > .gradient
              position: absolute
              top: 0
              left: 0
              width: 100%
              height: 100%
              background: radial-gradient(circle, rgba(0, 0, 0, 0), getColor('$black'))


          > .overlay
            position: absolute
            left: 0
            top: 0
            width: 100%
            height: 100%
            padding: 16px
            box-sizing: border-box
            background-color: getColor('$blue50026')
            display: flex
            justify-content: center
            align-items: center
            flex-direction: column

            > .name
              font-h1()
              color: getColor('$white')

            > .description
              font-body1()
              color: getColor('$white70')
              margin-top: 8px
