@require '../../vars'

.z-places-search
  // position: absolute
  // width: 100%
  // height: 100%

  > .input-container
    pointer-events: all
    padding: 8px
    background: getColor('$tertiary0')

    > .input
      position: relative
      z-index: 99 // needs to be less than 100 (place page overlay is 100)

  &.is-open
    > .overlay
      opacity: 1
      pointer-events: all

  > .overlay
    position: absolute
    z-index: 98
    pointer-events: none
    top: 0
    left: 0
    width: 100%
    height: 100%
    padding-bottom: 62px // hack to cover bottom bar
    background: getColor('$tertiary100')
    opacity: 0
    overflow: auto
    -webkit-overflow-scrolling: touch
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1)

    > .overlay-inner
      padding: 8px
      padding-top: 56px

      > .locations, > .data-types
        shadow-1()
        background: getColor('$tertiary0')
        border-radius: 2px
        padding: 8px
        margin-top: 8px

        > .title
          font-subtitle1()
          color: getColor('$primaryMain')
          padding: 0 8px
          margin-bottom: 8px

      > .data-types > .g-grid > .g-cols > .g-col
        > .type
          display: flex
          align-items: center
          padding: 0 8px
          cursor: pointer

          > .info
            > .name
              font-subtitle1()

            > .description
              font-caption()
              white-space: nowrap
              overflow: hidden
              text-overflow: ellipsis

          > .checkbox
            margin-left: auto

      > .locations
        > .location
          display: flex
          padding: 8px
          cursor: pointer

          &:hover
            background: getColor('$tertiary100')

          > .locality
            margin-left: 8px
            color: getColor('$bgText54')

          > .open
            margin-left: 16px

  @media (min-width: $breakPointMedium)
    > .overlay > .overlay-inner > .data-types > .g-grid > .g-cols > .g-col > .type
      > .checkbox
        margin-left: 8px

    > .overlay
      padding-bottom: 0 // get rid of bottom bar padding
