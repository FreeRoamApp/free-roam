@require './vars'

// Modified Columnus. Uses bootstrap syntax
// ===========

// Based on the 12 column nestable Foundation Grid:
// http://foundation.zurb.com/docs/components/grid.html
// -----------------------------------------------------------------------------

// Functions
// ---------

// NOTE: Do min-width everywhere (mobile first) above g-sm
// g-sm, use max-width (one-offs for iphone 4)

grid(class = 'xs', columns = 12)
  .g-grid .g-cols
    // Iterate through our columns
    for colCount in 1 2 3 4 6 12

      // Convert each column count to a percentage: i.e. 1/12
      percentWidth = 1% * ((colCount / columns) * 100)
      //
      // &.no-padding
      // 	.g-{class}-{colCount}
      // 		&:nth-child(n)
      // 			padding: 0
      // 			padding-left: 0
      // 			padding-right: 0

      .g-{class}-{colCount}
        width: percentWidth
        box-sizing: border-box
        // reset smaller sizes (eg reset xs when sm)
        &:nth-child(n)
          padding-left: 4px
          padding-right: 4px
          clear: none
        &:nth-child({12 / colCount}n + 1)
          clear: both

        for childNumber in (1 .. (12 / colCount))
          &:nth-child({childNumber})
            padding-top: 0
          &:nth-child({12 - childNumber})
            padding-bottom: 0

// Styles
// ------

.g-grid
  overflow hidden
  list-style none
  max-width: 1280px
  margin: 0 auto
  width: 100%
  clearfix()

  .g-cols
    margin-left: -4px
    margin-right: -4px

    > .g-col
      float left
      position relative
      padding 4px

      img
        max-width 100%
        height auto
        ms-interpolation-mode bicubic

    &.no-padding
      margin-left: 0
      margin-right: 0

      > .g-col
        padding: 0 !important

  *
    box-sizing border-box

grid()

@media (max-width: $breakPointMedium)
  .g-cols.lt-md-no-padding
    margin-left: 0 !important
    margin-right: 0 !important

    .g-col
      padding: 0 !important

@media (min-width: $breakPointSmall)
	grid('sm')

@media (min-width: $breakPointMedium)
  grid('md')

